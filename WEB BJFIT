    <script>
        const services = {
            fuerza: {
                title: "Fuerza Vital",
                headerImg: "https://images.unsplash.com/photo-1594882645126-14020914d58d?q=80&w=2085&auto=format&fit=crop",
                desc: "Entrenamiento focalizado en la construcción de tejido muscular para proteger tu esqueleto y mejorar tu metabolismo.",
                exercises: [
                    { n: "Prensa de Piernas", d: "3 series de 10 reps. Controla la bajada en 3 segundos.", i: "dumbbell" },
                    { n: "Press de Pecho en Máquina", d: "3 series de 12 reps. Mantén la espalda pegada al respaldo.", i: "heart" },
                    { n: "Extensiones de Cuádriceps", d: "3 series de 15 reps. Fuerza constante.", i: "person-walking" },
                    { n: "Remo Sentado", d: "3 series de 12 reps. Junta las escápulas atrás.", i: "arrows-left-right" }
                ]
            },
            resistencia: {
                title: "Resistencia Cardio",
                headerImg: "https://images.unsplash.com/photo-1571019613914-85f342c6a11e?q=80&w=2070&auto=format&fit=crop",
                desc: "Protocolos cardiovasculares de intensidad moderada para fortalecer el músculo cardíaco.",
                exercises: [
                    { n: "Cinta de Correr (Cuesta)", d: "15 min a ritmo de conversación.", i: "walking" },
                    { n: "Bicicleta Estática", d: "20 min con resistencia media.", i: "bicycle" },
                    { n: "Elíptica Suave", d: "10 min para calentar articulaciones.", i: "wind" },
                    { n: "Pasos Laterales con Banda", d: "2 series de 20 pasos.", i: "bolt" }
                ]
            },
            funcional: {
                title: "Equilibrio Funcional",
                headerImg: "https://images.unsplash.com/photo-1544367567-0f2fcb009e0b?q=80&w=2040&auto=format&fit=crop",
                desc: "Ejercicios que imitan movimientos de la vida real para evitar caídas y ganar agilidad.",
                exercises: [
                    { n: "Soportar Peso a una Pierna", d: "45 segundos por cada lado.", i: "balance-scale" },
                    { n: "Levantarse de Silla (Sin manos)", d: "3 series de 10 repeticiones.", i: "chair" },
                    { n: "Caminata de Tándem", d: "3 recorridos de 5 metros.", i: "shoe-prints" },
                    { n: "Rotación de Tronco con Balón", d: "3 series de 15 giros.", i: "basketball" }
                ]
            }
        };

        function openService(key) {
            const s = services[key];
            const content = document.getElementById('modal-content');
            
            content.innerHTML = `
                <div class="relative h-64 md:h-80 -mt-8 md:-mt-16 -mx-8 md:-mx-16 mb-12 overflow-hidden">
                    <img src="${s.headerImg}" class="w-full h-full object-cover opacity-60">
                    <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent"></div>
                    <h2 class="absolute bottom-10 left-10 font-serif text-5xl md:text-7xl gold-text uppercase">${s.title}</h2>
                </div>
                
                <p class="text-white text-2xl mb-16 leading-relaxed border-l-4 border-gold pl-8">${s.desc}</p>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    ${s.exercises.map(ex => `
                        <div class="bg-zinc-900 p-8 rounded-3xl border border-zinc-800 hover:border-gold transition-colors">
                            <div class="flex items-start justify-between">
                                <div class="flex items-center space-x-6">
                                    <div class="text-gold text-4xl"><i class="fas fa-${ex.i}"></i></div>
                                    <div>
                                        <h4 class="text-2xl font-bold mb-2">${ex.n}</h4>
                                        <p class="text-lg text-zinc-400">${ex.d}</p>
                                    </div>
                                </div>
                                <button onclick="logWorkout('${s.title}', '${ex.n}')" class="btn-gold p-4 rounded-xl">
                                    <i class="fas fa-check"></i>
                                </button>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
            document.getElementById('service-modal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeService() {
            document.getElementById('service-modal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function showSection(id) {
            document.getElementById(id + '-section').classList.remove('hidden');
            renderHistory();
        }

        function hideSection(id) {
            document.getElementById(id).classList.add('hidden');
        }

        function logWorkout(cat, ex) {
            const history = JSON.parse(localStorage.getItem('bjfit_v3_history')) || [];
            history.unshift({
                type: cat,
                exercise: ex,
                date: new Date().toLocaleDateString('es-ES', { weekday: 'short', day: 'numeric', month: 'short' }),
                time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
            });
            localStorage.setItem('bjfit_v3_history', JSON.stringify(history));
            alert(`¡Registro guardado!: ${ex}`);
        }

        function renderHistory() {
            const history = JSON.parse(localStorage.getItem('bjfit_v3_history')) || [];
            const container = document.getElementById('history-container');
            if (history.length === 0) {
                container.innerHTML = `<p class="text-zinc-600 italic text-2xl">Aún no has registrado ningún entrenamiento hoy.</p>`;
                return;
            }
            container.innerHTML = history.slice(0, 10).map(h => `
                <div class="bg-zinc-900 p-8 rounded-3xl border-l-8 border-gold flex justify-between items-center shadow-lg">
                    <div>
                        <p class="text-2xl font-bold text-white">${h.exercise}</p>
                        <p class="text-gold uppercase tracking-widest font-black text-sm mt-2">${h.type} • ${h.date} @ ${h.time}</p>
                    </div>
                    <i class="fas fa-medal text-gold text-4xl"></i>
                </div>
            `).join('');
        }

        document.getElementById('profile-form').onsubmit = (e) => {
            e.preventDefault();
            const data = {
                name: document.getElementById('p-name').value,
                age: document.getElementById('p-age').value,
                notes: document.getElementById('p-notes').value
            };
            localStorage.setItem('bjfit_v3_profile', JSON.stringify(data));
            alert("Su perfil Gold se ha actualizado.");
        };

        window.onload = () => {
            const p = JSON.parse(localStorage.getItem('bjfit_v3_profile'));
            if (p) {
                document.getElementById('p-name').value = p.name || '';
                document.getElementById('p-age').value = p.age || '';
                document.getElementById('p-notes').value = p.notes || '';
            }
        };
    </script>
</body>
</html>
